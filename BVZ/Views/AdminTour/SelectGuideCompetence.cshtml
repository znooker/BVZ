@{
}

<form asp-action="SelectGuideCompetence" method="post">
    <div class="form-group">
        <label asp-for="SelectedOptions">Select Options:</label>
        <select asp-for="SelectedOptions" class="form-control" multiple>
            @foreach (var option in Model.AvailableOptions)
            {
                <option value="@option">@option</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>