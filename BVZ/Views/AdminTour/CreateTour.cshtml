            <label>Morning or Afternoon Tour:</label>
            <div>
                <div class="form-check form-check-inline">
                    <input asp-for="IsMorningTour" class="form-check-input" type="radio" value="true" />
                    <label class="form-check-label">Morning Tour</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="IsMorningTour" class="form-check-input" type="radio" value="false" />
                    <label class="form-check-label">Afternoon Tour</label>
                </div>
            </div>
            <span asp-validation-for="IsMorningTour" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GuideId">Guide:</label>
            <select asp-for="GuideId" asp-items="@(new SelectList(Model.Guides, "Id", "Name"))" class="form-control">
                <option value="">Select a Guide</option>
            </select>
            <span asp-validation-for="GuideId" class="text-danger"></span>
