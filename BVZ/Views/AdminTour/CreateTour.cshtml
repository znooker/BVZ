        <div class="form-group">
            <label asp-for="DateOfTour">Date of Tour:</label>
            <input asp-for="DateOfTour" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="DateOfTour" class="text-danger"></span>
        </div>

