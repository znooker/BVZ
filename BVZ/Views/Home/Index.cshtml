@model BVZ.Models.Home.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}


<h3>Our Lovely Animals</h3>
<div class="text-center">
        <h1 class="display-4">Welcome</h1>
    </div>
    <div class="container">

        <h3>Our Lovely Animals</h3>
        
        <div class="row">
            @foreach (var animal in Model.ZooAnimals){
            <div class="col-md-4">
                <div class="card mb-4">
                    <img class="card-img-top" src="/img/zoo-gate-icon-black-white_755164-13783.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@animal.AnimalName</h5>
                         <h6 class="card-subtitle mb-2 text-muted">@animal.Specie</h6>
                         <h6 class="card-subtitle mb-2 text-muted">Tag: @animal.Id</h6>
                        <div class="btn-group">
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@animal.Id" type="button" class="btn btn-sm btn-outline-secondary">Details</a>
                            
                        </div>
                        @* <button asp-controller="Home" asp-action="Details" asp-route="@animal.Id" type="button" class="btn btn-primary">Details</button> *@
                    </div>
                </div>
            </div>
        }
            
        </div>

    </div>